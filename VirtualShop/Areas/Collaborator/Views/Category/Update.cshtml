@model Category
@{
    ViewData["Title"] = "Register";
}

<h1>Atualizar Categoria</h1>

@using (Html.BeginForm("Update", "Category", FormMethod.Post))
{
    <input hidden="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name">Nome</label>
        <input asp-for="Name" class="form-control" placeholder="Insira o nome da categoria" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Slug">Slug</label>
        <input asp-for="Slug" class="form-control" placeholder="Insira o slug da categoria" />
        <span asp-validation-for="Slug" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FatherCategoryId"></label>
        <select asp-for="FatherCategoryId" asp-items="ViewBag.Categories" class="form-control">
            <option value="">Selecione</option>
        </select>
        <span asp-validation-for="FatherCategoryId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Registrar</button>
}