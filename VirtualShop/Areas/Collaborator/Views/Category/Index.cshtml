@model X.PagedList.IPagedList<VirtualShop.Models.Category>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (Model.Count > 0)
{
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Categoria Pai</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Category category in Model)
            {
                <tr>
                    <th scope="row">@category.Id</th>
                    <td>@category.Name</td>
                    <td>
                        @Html.DisplayFor(model => category.CategoryFather.Id)
                        -
                        @Html.DisplayFor(model => category.CategoryFather.Name)
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-id="@category.Id" class="btn btn-secondary">Atualizar</a>
                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Deletar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@Html.PagedListPager((IPagedList)ViewBag.OnePageOfProducts, page => Url.Action("index", new { page }))

}
else 
{
    <span>Nenhum registro cadastrado!</span>
}