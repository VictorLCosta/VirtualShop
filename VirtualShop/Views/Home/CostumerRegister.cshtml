@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model VirtualShop.Models.Client
@{
    ViewData["Title"] = "Register";
}

<main role="main">

    <section class="container" style="margin-top: 50px">
        <div class="row">
            <aside class="col-sm-6">
                <h3 class="subtitle-doc">
                   Cadastro de Cliente
                </h3>
                <div id="code_register_1">
                    <div class="card">
                        <header class="card-header">
                            <a asp-controller="Home" asp-action="Login" class="float-right btn btn-outline-primary mt-1">Login</a>
                            <h4 class="card-title mt-2">Cadastre-se</h4>
                        </header>
                        <article class="card-body">
                            <form>
                                <div class="form-row">
                                    <div class="col form-group">
                                        <label>Nome</label>
                                        <input type="text" asp-for="Name" class="form-control" placeholder="Primeiro nome">
                                    </div> <!-- form-group end.// -->
                                    <div class="col form-group">
                                        <label>Data de Nascimento</label>
                                        <input type="date" asp-for="BirthDate" class="form-control" placeholder="">
                                    </div> <!-- form-group end.// -->
                                </div> <!-- form-row end.// -->
                                <div class="form-group">
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="gender" value="option1">
                                        <span class="form-check-label"> Masculino </span>
                                    </label>
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="gender" value="option2">
                                        <span class="form-check-label"> Feminino</span>
                                    </label>
                                </div> <!-- form-group end.// -->
                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="email" asp-for="Email" class="form-control" placeholder=""/>
                                </div>
                                <div class="form-group">
                                    <label>Telefone</label>
                                    <input type="text" asp-for="Telephone" class="form-control" placeholder="">
                                </div>
                                <div class="form-group">
                                    <label>Senha</label>
                                    <input class="form-control" asp-for="Password" type="password">
                                </div> <!-- form-group end.// -->
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block"> Cadastrar </button>
                                </div> <!-- form-group// -->
                                <small class="text-muted">
                                    Clicando no botão 'Cadastrar', você confirma
                                    que aceita nossos <br> Terms of use and Privacy Policy.
                                </small>
                            </form>
                        </article> <!-- card-body end .// -->
                        <div class="border-top card-body text-center">Já possui uma conta? <a href="">Log In</a></div>
                    </div> <!-- card.// -->

                </div> <!-- code-wrap.// -->
            </aside>
        </div>
    </section>
</main>